<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create a new campgrounds</h1>
        <div style="width: 50%; margin:50px auto;">
            <form action="/campgrounds" method="post" class="form-group">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="Campground Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" name="image"class="form-control" placeholder="Campground Image url">
                </div>
                <div class="form-group">
                    <input type="text" name="description"class="form-control" placeholder="Campground Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="campgrounds">Go Back</a>        
        </div>
    </div>
</div>

<%- include("../partials/footer") %>