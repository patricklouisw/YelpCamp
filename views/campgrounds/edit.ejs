<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %> </h1>
        <div style="width: 50%; margin:50px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="post" class="form-group">
                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" placeholder="Campground Name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" name="campground[price]" class="form-control" placeholder="Campground Price" min="0.01" step="0.01" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]"class="form-control" placeholder="Campground Image url"  value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]"class="form-control" placeholder="Campground Description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>        
        </div>
    </div>
</div>

<%- include("../partials/footer") %>