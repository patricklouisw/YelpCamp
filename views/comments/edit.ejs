<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit comment </h1>
        <div style="width: 50%; margin:50px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post" class="form-group">
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" placeholder="Text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>        
        </div>
    </div>
        
</div>

<%- include("../partials/footer") %>