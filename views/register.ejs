<%- include("./partials/header") %> 

<div class="container">
    <div class="row">
        <h1 class="text-center">Sign Up for our Account</h1>
        <div style="width: 50%; margin:50px auto;">

            <form action="/register" method="POST" class="form-group">
                <div class="form-group">
                    <input type="text" name="username" placeholder="username" class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="password" class="form-control">
                </div>
                <button class="btn btn-primary btn-large btn-block">Sign Up</button>
            </form>
            <a href="/login" class="btn btn-success btn-block">Already a member? Log In here!</a>
            <a href="/campgrounds" class="btn btn-secondary btn-block">Go back</a>

        </div>
    </div>
</div>

<%- include("./partials/footer") %> 