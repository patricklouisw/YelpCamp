<%- include("./partials/header") %> 

<div class="container">
    <div class="row">
        <h1 class="text-center">Login to Yelp Camp</h1>
        <div style="width: 50%; margin:50px auto;">
            <form action="/login" method="POST" class="form-group">
                <div class="form-group">
                    <input type="text" name="username" placeholder="username" class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="password" class="form-control">
                </div>
                
                <button class="btn btn-primary btn-large btn-block">Log in</button>
            </form>
            <a href="/register" class="btn btn-warning btn-block">Not a member? Sign up here!</a>
            <a href="/campgrounds" class="btn btn-secondary btn-block">Go back</a>

        </div>
    </div>
</div>

<%- include("./partials/footer") %>